*.ex      text eol=lf

# Shell & Build Scripts
*.sh      text eol=lf
*.bash    text eol=lf
*.zsh     text eol=lf
*.fish    text eol=lf
*.bat     text eol=crlf
*.cmd     text eol=crlf
*.ps1     text eol=crlf

# Build Tools & Config
/gradlew  text eol=lf
.editorconfig text eol=lf
.gitattributes text eol=lf
.gitignore text eol=lf
.env      text eol=lf
.env.*    text eol=lf
Dockerfile text eol=lf
docker-compose.yml text eol=lf
