*.pyx     text eol=lf

# Backend — PHP
*.php     text eol=lf
*.phtml   text eol=lf

# Backend — C#/.NET
*.cs      text eol=lf
*.csproj  text eol=lf

# Backend — ETC
*.go      text eol=lf
*.rb      text eol=lf
*.rs      text eol=lf
